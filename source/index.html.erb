<% page_articles.each_with_index do |article, i| %>
<div class="article">
  <h2><%= link_to article.title, article %> <time><%= article.date.strftime('%e %b %Y') %></time></h2>
  <h3>  <%= article.data.subtitle%></h3>
  <p><%= article.summary(350) %></p>
  <%= link_to "",  "#{article.url}#disqus_thread" %>
</div>
<%end%>